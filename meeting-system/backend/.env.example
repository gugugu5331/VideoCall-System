# 会议系统环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ============================================================================
# 安全配置（必须设置）
# ============================================================================

# JWT密钥（至少32字符，生产环境必须设置）
# 生成强密钥: openssl rand -base64 32
JWT_SECRET=your-very-long-and-secure-secret-key-at-least-32-characters-here

# CORS允许的源（多个源用逗号分隔）
# 生产环境示例: https://meeting.example.com,https://app.example.com
# 开发环境可以使用: http://localhost:3000,http://localhost:8080
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# ============================================================================
# 数据库配置
# ============================================================================

# PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password
DATABASE_DBNAME=meeting_system
DATABASE_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=meeting_system

# ============================================================================
# 对象存储配置
# ============================================================================

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=meeting-system

# ============================================================================
# 服务配置
# ============================================================================

# 服务器模式: debug, release, test
GIN_MODE=debug

# 服务端口
SERVER_PORT=8080
GRPC_PORT=50051

# ============================================================================
# 日志配置
# ============================================================================

LOG_LEVEL=info
LOG_FILENAME=logs/app.log

# ============================================================================
# 分布式追踪配置（Jaeger）
# ============================================================================

# Jaeger Agent 地址
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# 采样策略
# const: 0=不采样, 1=全部采样
# probabilistic: 0.0-1.0 采样概率
# ratelimiting: 每秒最多采样 N 个
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# ============================================================================
# 其他配置
# ============================================================================

# ZMQ配置（AI服务）
ZMQ_UNIT_MANAGER_HOST=localhost
ZMQ_UNIT_MANAGER_PORT=5001

