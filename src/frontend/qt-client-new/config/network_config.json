{
  "network": {
    "backend": {
      "base_url": "http://localhost:80",
      "api_base_url": "http://localhost:80/api",
      "websocket_url": "ws://localhost:80/ws",
      "timeout": 30000,
      "retry_count": 3,
      "retry_delay": 1000
    },
    "wsl_backend": {
      "enabled": true,
      "detection_method": "auto",
      "wsl_ip_detection": {
        "command": "wsl hostname -I",
        "fallback_ip": "172.20.0.1",
        "cache_duration": 300
      },
      "base_url": "http://{wsl_ip}:80",
      "api_base_url": "http://{wsl_ip}:80/api",
      "websocket_url": "ws://{wsl_ip}:80/ws"
    },
    "services": {
      "user_service": {
        "endpoint": "/api/v1/users",
        "health_check": "/api/v1/users/health"
      },
      "meeting_service": {
        "endpoint": "/api/v1/meetings",
        "health_check": "/api/v1/meetings/health"
      },
      "signaling_service": {
        "endpoint": "/ws/signaling",
        "health_check": "/api/v1/signaling/health"
      },
      "media_service": {
        "endpoint": "/api/v1/media",
        "health_check": "/api/v1/media/health"
      },
      "ai_detection_service": {
        "endpoint": "/api/v1/ai-detection",
        "health_check": "/api/v1/ai-detection/health",
        "edge_endpoint": "/ai",
        "unit_manager_endpoint": "http://{wsl_ip}:10001"
      },
      "notification_service": {
        "endpoint": "/api/v1/notifications",
        "health_check": "/api/v1/notifications/health"
      },
      "record_service": {
        "endpoint": "/api/v1/records",
        "health_check": "/api/v1/records/health"
      },
      "smart_editing_service": {
        "endpoint": "/api/v1/smart-editing",
        "health_check": "/api/v1/smart-editing/health"
      }
    },
    "video_effects": {
      "upload_endpoint": "/api/v1/media/upload",
      "processing_endpoint": "/ai/detect",
      "max_file_size": 104857600,
      "supported_formats": ["mp4", "avi", "mov", "webm"],
      "chunk_size": 1048576
    },
    "webrtc": {
      "ice_servers": [
        {
          "urls": "stun:stun.l.google.com:19302"
        },
        {
          "urls": "stun:stun1.l.google.com:19302"
        }
      ],
      "signaling_server": "ws://{backend_url}/ws/signaling",
      "connection_timeout": 10000,
      "reconnect_attempts": 5,
      "reconnect_delay": 2000
    },
    "cors": {
      "allowed_origins": ["*"],
      "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowed_headers": ["Content-Type", "Authorization", "X-Requested-With"]
    },
    "security": {
      "api_key_header": "X-API-Key",
      "jwt_header": "Authorization",
      "csrf_protection": false,
      "ssl_verification": false
    },
    "performance": {
      "connection_pool_size": 10,
      "keep_alive": true,
      "compression": true,
      "cache_enabled": true,
      "cache_duration": 300
    },
    "logging": {
      "network_requests": true,
      "response_times": true,
      "error_details": true,
      "log_level": "INFO"
    }
  },
  "development": {
    "mock_services": false,
    "debug_mode": true,
    "verbose_logging": true,
    "network_simulation": {
      "enabled": false,
      "latency": 100,
      "packet_loss": 0.01,
      "bandwidth_limit": 0
    }
  },
  "production": {
    "mock_services": false,
    "debug_mode": false,
    "verbose_logging": false,
    "ssl_required": true,
    "certificate_validation": true
  }
}
